---
import ServiceCard from "./ServiceCard.astro";
import { FaLaptopCode, FaBolt, FaRocket } from "react-icons/fa"; 
---

<section class="site-container mt-14 mx-auto max-w-6xl px-4">
	<h2
		class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-end"
	>
		<span class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#0debd8] bg-[#7836cf] md:block"></span>
		<span class="drop-shadow-[2px_2px_0_#7836cf]">Services</span>
	</h2>

	<div class="mt-10 grid gap-6 md:grid-cols-3">
		<ServiceCard
			icon={FaLaptopCode}
			title="Responsive Web Design"
			description="Design responsive and accessible websites and components that delivers an intuitive and exceptional user experience."
		/>
		<ServiceCard
			icon={FaBolt}
			title="Web Development"
			description="Developing modern, fast, and accessible web applications with a focus on performance and user experience."
		/>
		<ServiceCard
			icon={FaRocket}
			title="Social Media Marketing"
			description="Design and run effective social media campaigns to increase brand awareness and drive engagement."
		/>
	</div>
</section>
